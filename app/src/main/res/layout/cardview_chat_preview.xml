<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Base.CardView"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FCF9FF"
    android:layout_marginTop="0.5dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageUserTo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/prueba"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/nameUserTo"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frank Rodriguez Aguirre"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/viewed"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_double_check"
                    app:tint="@color/teal_700"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:id="@+id/lastMessage"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estoy en el parque"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/timestampLastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:12"
                android:textSize="10sp"
                android:lines="1"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/countNoSeeMessages"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_folder"
                android:text="5"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textAlignment="center"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:visibility="gone"
               />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>