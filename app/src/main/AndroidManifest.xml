<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.optic.projectofinal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectoFinal">
        <activity
            android:name=".activites.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.ProjectoFinal.NoActionBar"></activity>
        <activity android:name=".activites.ProfileActivity" />
        <activity
            android:name=".activites.CategorySelectedActivity"
            android:parentActivityName=".activites.MainActivity" />
        <activity android:name=".activites.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>